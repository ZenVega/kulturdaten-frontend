{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "next"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "ignorePatterns": ["story.tsx", "*.story.tsx", "story.ts", "*.story.tsx", "stories.tsx", "*.stories.tsx", "*.config.ts"]
}
